{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "compilerOptions": {
        "lib": ["es2021"],
        "module": "NodeNext",
        "target": "es2021",
        "outDir": "dist",
        "moduleResolution": "nodenext",
        "noImplicitAny": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
